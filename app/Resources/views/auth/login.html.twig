{% extends("base.html.twig")  %}
{% block body %}
    <h1>Login da área de assinante</h1>
    {% if erro %}
        <div>{{ erro.messageKey }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <label for="email">Email</label>
        <input type="text" id="email" name="_username" value="{{ ultimo_email }}">

        <label for="senha">Senha</label>
        <input type="password" id="senha" name="_password">

        <button type="submit">Enviar</button>
        <div>Ainda não possui uma conta? Clique <a href="{{ path('register') }}">aqui</a></div>
    </form>
{% endblock %}